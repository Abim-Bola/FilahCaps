<%- include ("partials/message"); %>
    <div class="row card-deck">
<% products.forEach(function(product) { %>
    <!-- <div class="row card-deck"> -->
        <div class="col-md-3">
    <div class="card">
          <img class="card-img-top" src="<%= product.image %>" alt="Card image cap" style="width: 100%; height: 180px;">
          <div class="card-body">
            <h5 class="card-title"><%= product.productName %></h5>
            <p class="card-text"><%= product.price %></p>
             <div class="btn-group">
            <a href="/user/add-to-cart/<%=product._id%>"><button type="button" class=" btn btn-outline-primary"> Add to cart
                <i  class="fas fa-shopping-cart"></i>
            </button></a>
          </div>
        </div>
        </div>
    </div>
        
    
    <%})%>


    
